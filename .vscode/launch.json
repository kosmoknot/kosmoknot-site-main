{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Debug Generator (WSL)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/meengi/meengi",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make all"
        },
        {
            "name": "Debug Tests (WSL)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/meengi/meengi_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/meengi",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make tests"
        }
    ]
}
